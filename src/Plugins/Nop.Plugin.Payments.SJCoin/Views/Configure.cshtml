@model Nop.Plugin.Payments.SJCoin.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}
@using Nop.Plugin.Payments.SJCoin.Models

@await Component.InvokeAsync("StoreScopeConfiguration")
<form asp-controller="PaymentSJCoin" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ContractAddress" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ContractAddress" />
                        <span asp-validation-for="ContractAddress"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Url" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Url" />
                        <span asp-validation-for="Url"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="AccountPrivateKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AccountPrivateKey" />
                        <span asp-validation-for="AccountPrivateKey"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="TransactionReceiptCheckIntervalInSeconds" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="TransactionReceiptCheckIntervalInSeconds" />
                        <span asp-validation-for="TransactionReceiptCheckIntervalInSeconds"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="TransactionDetailsBaseUrl" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="TransactionDetailsBaseUrl" />
                        <span asp-validation-for="TransactionDetailsBaseUrl"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>